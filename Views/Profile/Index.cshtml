@model StudentManagementWithAI.Models.ViewModels.ProfileVM

@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form class="row" method="post" asp-controller="Profile" asp-action="Update">
    @if (User.IsInRole(Constants.FacultyRole)) {
        <input asp-for="@Model.Faculty.Id" hidden />
        <input asp-for="@Model.Faculty.UserId" hidden />
        <div class="col-md-3 border-right">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                @if (Model.Faculty.ApplicationUser.PhotoName == "") {
                    <img class="rounded-circle mt-5" width="150px" height="150px"
                         src='@(Constants.UserImagePath+"default.png")'>
                } else {
                    <img class="rounded-circle mt-5" width="150px" height="150px"
                         src="@Constants.UserImagePath@Model.Faculty.ApplicationUser.PhotoName">
                }
                <span class="font-weight-bold">@Model.Faculty.Name</span>
                <span class="text-black-50">@Model.Faculty.ApplicationUser.Email</span>
                <span></span>
            </div>
        </div>
        <div class="col-md-7 border-right">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right">Profile Settings</h4>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6">
                        <label asp-for="@Model.Faculty.Name"></label>
                        <input type="text" class="form-control" asp-for="@Model.Faculty.Name">
                        <span asp-validation-for="@Model.Faculty.Name" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="@Model.Faculty.Initial"></label>
                        <input class="form-control" asp-for="@Model.Faculty.Initial" readonly>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-12">
                        <label class="labels">Phone Number</label>
                        <input class="form-control" asp-for="@Model.Faculty.ApplicationUser.PhoneNumber" required>
                        <span asp-validation-for="@Model.Faculty.ApplicationUser.PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="col-md-12">
                        <label asp-for="@Model.Faculty.Address"></label>
                        <input class="form-control" asp-for="@Model.Faculty.Address">
                    </div>
                    <div class="col-md-12">
                        <label asp-for="@Model.Faculty.ApplicationUser.Email"></label>
                        <input type="email" class="form-control" asp-for="@Model.Faculty.ApplicationUser.Email" required>
                        <span asp-validation-for="@Model.Faculty.ApplicationUser.Email" class="text-danger"></span>
                    </div>
                    <div class="col-md-12">
                        <label asp-for="@Model.Faculty.Gender"></label>
                        <input class="form-control" asp-for="@Model.Faculty.Gender" readonly>
                    </div>
                    <div class="col-md-12">
                        <label asp-for="@Model.Faculty.DOB"></label>
                        <input class="form-control" asp-for="@Model.Faculty.DOB" readonly>
                    </div>
                </div>
                <div class="mt-5 text-center">
                    <input type="submit" class="btn btn-primary profile-button" value="Save Profile" />
                </div>
            </div>
        </div>
    } else {
        <div class="col-md-3 border-right">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                @if (Model.Student.ApplicationUser.PhotoName == "") {
                    <img class="rounded-circle mt-5" width="150px"
                         src='@(Constants.UserImagePath+"default.png")'>
                } else {
                    <img class="rounded-circle mt-5" width="150px"
                         src="@Constants.UserImagePath@Model.Student.ApplicationUser.PhotoName">
                }
                <span class="font-weight-bold">@Model.Student.Name</span>
                <span class="text-black-50">@Model.Student.ApplicationUser.Email</span>
                <span></span>
            </div>
        </div>
        <div class="col-md-7 border-right">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right">Profile Settings</h4>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6">
                        <label asp-for="@Model.Student.Name"></label>
                        <input type="text" class="form-control" asp-for="@Model.Student.Name" disabled>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="@Model.Student.Id"></label>
                        <input class="form-control" asp-for="@Model.Student.Id" disabled>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-12">
                        <label class="labels">Phone Number</label>
                        <input class="form-control" asp-for="@Model.Student.ApplicationUser.PhoneNumber" disabled>
                    </div>
                    <div class="col-md-12">
                        <label asp-for="@Model.Student.Address"></label>
                        <input class="form-control" asp-for="@Model.Student.Address" disabled>
                    </div>
                    <div class="col-md-12">
                        <label asp-for="@Model.Student.ApplicationUser.Email"></label>
                        <input type="email" class="form-control" asp-for="@Model.Student.ApplicationUser.Email" disabled>
                    </div>
                    <div class="col-md-12">
                        <label asp-for="@Model.Student.Gender"></label>
                        <input class="form-control" asp-for="@Model.Student.Gender" disabled>
                    </div>
                    <div class="col-md-12">
                        <label asp-for="@Model.Student.DOB"></label>
                        <input class="form-control" asp-for="@Model.Student.DOB" disabled>
                    </div>
                </div>
            </div>
        </div>
    }
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

